@model MathTrainer.Models.User

@{
    ViewData["Title"] = "Личный кабинет";
    var user = Model;

    var easy = user.CourseProgresses.FirstOrDefault(p => p.CourseName == "Easy");
    var medium = user.CourseProgresses.FirstOrDefault(p => p.CourseName == "Medium");
    var hard = user.CourseProgresses.FirstOrDefault(p => p.CourseName == "Hard");
    var exam = user.CourseProgresses.FirstOrDefault(p => p.CourseName == "Exam");
}

<style>
    .progress-bar {
        background-color: #e0e0e0;
        border-radius: 8px;
        overflow: hidden;
        height: 20px;
        margin-top: 8px;
        margin-bottom: 16px;
    }

    .progress-fill {
        background: linear-gradient(90deg, #4F46E5 0%, #6366F1 100%);
        height: 100%;
        text-align: right;
        padding-right: 8px;
        color: white;
        font-weight: bold;
        font-size: 14px;
        line-height: 20px;
        border-radius: 8px;
        transition: width 0.6s ease;
    }

    .hero {
        margin: 0;
        padding: 0;
        padding: 0 100px;
        min-height: 90px;
        background: #6176F7;
        background-size: 600px;
        background-image: none;
    }

    .back-name {
        padding: 0px 100px 80px;
    }

    .back-name-title {
        font-size: 30px;
        line-height: 38px;
        margin: 0;
        color: #101828;
        font-weight: 500;
        margin-bottom: 16px;
    }

    .back-name-text {
        font-size: 16px;
        line-height: 24px;
        margin: 0;
        color: #667085;
        margin-bottom: 52px;
    }

    .continue-title {
        font-size: 26px;
        line-height: 44px;
        margin: 0;
        color: #ffffff;
        display: block;
        margin-bottom: 16px;
    }

    .continue-text {
        font-size: 18px;
        line-height: 22px;
        margin: 0;
        display: block;
        color: #ffffff;
    }

    .continue-container {
        background: #6176F7 url("../images/background.png") no-repeat center;
        background-size: cover;
        min-height: 275px;
        border-radius: 8px;

    }

    .continue-container-wrapper {
        margin-left: auto;
        width: 600px;
        position: relative;
        padding: 120px 50px;
    }

    .continue-container-wrapper::before {
        content: "";
        display: block;
        width: 450px;
        position: absolute;
        height: 450px;
        background: url("../images/back2.svg") no-repeat;
        left: -400px;
        top: -100px;
        background-size: cover;
        z-index: 1;
    }

    .progress-list {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
        justify-content: space-between;
        gap: 8px;
        margin-top: 24px;
    }

    .progress-item {
        border: 1px solid #EAECF0;
        box-shadow: 0px 1px 3px rgba(16, 24, 40, 0.1), 0px 1px 2px rgba(16, 24, 40, 0.06);
        border-radius: 8px;
        flex-grow: 1;
        padding: 24px;
    }

    .progress-item-title {
        color: #667085;
        margin: 0;
        line-height: 20px;
        font-size: 16px;
        font-weight: 500;
    }

    .activity {
        padding: 80px 100px;
        background: #F1F2F8;
    }

    .activity-title {
        font-size: 26px;
        line-height: 24px;
        font-weight: 500;
    }

    .activity-text {
        color: #667085;
        margin-bottom: 24px;
    }

    .recent-courses {
        background-color: #f7f7f8;
        padding: 80px 100px;
    }

    .recent-title {
        font-size: 26px;
        line-height: 24px;
        font-weight: 600;
        margin-bottom: 52px;
    }

    .form-profile-container {
        display: grid;
        grid-template-columns: max-content 1fr;
        align-items: center;
        gap: 15px;
    }

    .sign-up-button {
        border: none;
        align-self: center;
    }

    .private-date {
        padding: 80px 100px;
    }

    .name-form-profile {
        display: flex;
        justify-content: space-between;
    }

    input {
        border-radius: 8px;
        border: none;
        width: 410px;
        background-color: #F2F2F2;
        height: 48px;
        cursor: pointer;
        font-family: inherit;
        font-size: 18px;
        padding: 10px 20px;
    }

    input[type="number"] {
        -webkit-appearance: textfield;
        appearance: textfield;
        font-family: inherit;
    }

    input[type="number"]::-webkit-outer-spin-button,
    input[type="number"]::-webkit-inner-spin-button {
        -webkit-appearance: none;
        appearance: none;
        margin: 0;
    }

    .rez{display: flex; flex-direction: column; gap: 10px;}
</style>
<main>
    <section class="hero">
        <nav class="navigation">
            <a href="/" class="logo-link"><span class="span-a">A</span>&<span class="span-e">E</span></a>
            <ul class="navigation-list">
                <li class="navigation-item">
                    <a asp-controller="Home" asp-action="Index" class="navigation-item-link">Главная</a>

                </li>
                <li class="navigation-item">
                    <a href="#" class="navigation-item-link">Тренажеры</a>
                </li>
                <li class="navigation-item">
                    <a href="/" class="navigation-item-link">Лекции</a>
                </li>
                <li class="navigation-item">
                    <a href="/About" class="navigation-item-link">О нас</a>
                </li>
            </ul>
            <ul class="navigation-user">
                <li class="navigation-user-item">
                    <form asp-action="Logout" asp-controller="Account" method="post">
                        <button class="navigation-user-link" type="submit">Выйти</button>
                    </form>
                </li>
                <li class="navigation-user-item">
                    <span class="navigation-user-link sign-up-button">@user.Name</span>
                </li>
            </ul>
        </nav>
    </section>

    <section class="back-name">
        <h2 class="back-name-title">Рады видеть тебя, @user.Name</h2>
        <p class="back-name-text">Твоя текущая активность здесь</p>
        <div class="continue-container">
            <div class="continue-container-wrapper">
                <h3 class="continue-title">Продолжай в том же духе. Не сдавайся</h3>
                <p class="continue-text">Каждый раз, когда ты открываешь наше приложение и начинаешь учиться, ты
                    вкладываешься в своё будущее. Как бы ни было тяжело — мы с тобой.</p>
            </div>
        </div>

        <ul class="progress-list">
            <li class="progress-item">
                <h4 class="progress-item-title">Завершенные</h4>
                <div class="progress-item-courses">
                    <div class="progress-item-course">
                        <p class="progress-item-courses-name">Легкий уровень</p>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width:@(easy?.ProgressPercent ?? 0)%">
                                @(easy?.ProgressPercent ?? 0)%
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            <li class="progress-item">
                <h4 class="progress-item-title">В процессе</h4>
                <div class="progress-item-courses">
                    <div class="progress-item-course">
                        <p class="progress-item-courses-name">Средний уровень</p>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width:@(medium?.ProgressPercent ?? 0)%">
                                @(medium?.ProgressPercent ?? 0)%
                            </div>
                        </div>
                    </div>
                    <div class="progress-item-course">
                        <p class="progress-item-courses-name">Продвинутый уровень</p>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width:@(hard?.ProgressPercent ?? 0)%">
                                @(hard?.ProgressPercent ?? 0)%
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            <li class="progress-item">
                <h4 class="progress-item-title">Экзамен</h4>
                <div class="progress-item-courses">
                    <div class="progress-item-course">
                        <p class="progress-item-courses-name">Экзамен</p>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width:@(exam?.ProgressPercent ?? 0)%">
                                @(exam?.ProgressPercent ?? 0)%
                            </div>
                        </div>
                        @* @if ((exam?.ProgressPercent ?? 0) >= 100)
                        {
                        <a href="/Dashboard/Certificate" target="_blank">Скачать сертификат</a>

                        } *@
                        @if ((exam?.ProgressPercent ?? 0) >= 100)
                        {
                            <div class="rez">
                                <a class="button" href="/Dashboard/Certificate">Скачать сертификат</a>
                                <a class="button" href="/Dashboard/Certificate?sendByEmail=true">Отправить на почту</a>
                            </div>
                        }

                    </div>
                </div>
            </li>
        </ul>

    </section>



    <section class="private-date">
        <div class="name-container">
            <form class="name-form-profile" id="profile-form" method="post" asp-controller="Dashboard"
                asp-action="UpdateProfile">
                <div class="form-profile-container">
                    <label for="name-user">Имя:</label>
                    <input id="name-user" name="Name" type="text" value="@user.Name" readonly>
                    <label for="age-user">Возраст:</label>
                    <input id="age-user" name="Age" type="number" value="@user.Age" readonly>
                    <label for="email-user">Email:</label>
                    <input id="email-user" name="Email" type="text" value="@user.Email" readonly>
                </div>
                <button type="button" id="edit-button" class="sign-up-button">Редактировать</button>
            </form>
        </div>
    </section>
</main>
@section Scripts {
    <script>
        const editBtn = document.getElementById("edit-button");
        const form = document.getElementById("profile-form");
        const inputs = form.querySelectorAll("input");

        let isEditing = false;

        editBtn.addEventListener("click", () => {
            if (!isEditing) {
                // Разблокировать поля
                inputs.forEach(input => input.removeAttribute("readonly"));
                editBtn.textContent = "Сохранить";
                isEditing = true;
            } else {
                // Отправить форму
                form.submit();
            }
        });
    </script>
}

